<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Predictions</title>
    <link rel="stylesheet" href="/css/sidebarstyles.css">
    <link rel="stylesheet" href="/css/headerstyles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }
        .container {
            display: flex;
            justify-content: space-between;
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }
        #map {
            width: 400px;
            height: 500px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .form-container {
            width: 450px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        form {
            margin-bottom: 20px;
        }
        label {
            font-weight: bold;
        }
        select, input[type="date"] {
            display: block;
            width: 100%;
            margin: 10px 0 20px;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        .data {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }
        .data:last-child {
            border-bottom: none;
        }
    </style>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
</head>
<body>
{{> common/header}}
{{> common/sidebar}}
{{> common/footer}}

<div class="container">
    <!-- 지도 -->
    <div id="map"></div>

    <!-- 검색 폼 -->
    <div class="form-container">
        <h1>Stock Predictions</h1>

        <form action="/stock" method="get">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required>

            <label for="location">Location:</label>
            <select id="location" name="location" required>
                {{#locations}}
                    <option value="{{.}}">{{.}}</option>
                {{/locations}}
            </select>

            <label for="category_name">Category:</label>
            <select id="category_name" name="category_name" required>
                {{#categories}}
                    <option value="{{.}}">{{.}}</option>
                {{/categories}}
            </select>

            <button type="submit">Get Prediction</button>
        </form>

        <!-- 결과 출력 -->
        {{#predictedValue}}
            <div class="data">
                <div class="label">Predicted Value:</div>
                <div>{{predictedValue}}</div>
            </div>
            <div class="data">
                <div class="label">Safety Stock:</div>
                <div>{{safetyStock}}</div>
            </div>
            <div class="data">
                <div class="label">Proper Stock:</div>
                <div>{{properStock}}</div>
            </div>
        {{/predictedValue}}
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script>
    // 지도 초기화
    var map = L.map('map').setView([37.5665, 126.9780], 10.1);

    // OSM 타일 레이어 추가
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // 지하철역 좌표 데이터
    var stations = [
        {"name": "가락시장", "lat": 37.492522, "lng": 127.118234},
        {"name": "고속터미널", "lat": 37.50481, "lng": 127.004943},
        {"name": "군자", "lat": 37.557121, "lng": 127.079542},
        {"name": "길음", "lat": 37.603407, "lng": 127.025053},
        {"name": "김포공항", "lat": 37.562434, "lng": 126.801058},
        {"name": "독산", "lat": 37.466613, "lng": 126.889249},
        {"name": "목동", "lat": 37.526065, "lng": 126.864931},
        {"name": "불광", "lat": 37.610469, "lng": 126.929887},
        {"name": "석계", "lat": 37.614805, "lng": 127.065851},
        {"name": "신내", "lat": 37.612887, "lng": 127.103218},
        {"name": "신림", "lat": 37.484201, "lng": 126.929715},
        {"name": "양재", "lat": 37.484147, "lng": 127.034631},
        {"name": "온수", "lat": 37.492258, "lng": 126.823388},
        {"name": "용산", "lat": 37.529849, "lng": 126.964561},
        {"name": "창동", "lat": 37.653166, "lng": 127.047731},
        {"name": "천호", "lat": 37.538397, "lng": 127.123572},
        {"name": "화계", "lat": 37.634967, "lng": 126.835958}
    ];

    // 마커 추가 및 드롭다운 연동
    stations.forEach(function(station) {
        var marker = L.marker([station.lat, station.lng]).addTo(map);
        marker.bindPopup(`<strong>${station.name}</strong>`);

        marker.on('click', function() {
            document.getElementById('location').value = station.name;
        });
    });
</script>

</body>
</html>
